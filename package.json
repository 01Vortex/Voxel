{
  "name": "voxel-comment",
  "version": "1.0.0",
  "description": "一个简洁的聊天式评论系统 Vue 组件",
  "type": "module",
  "main": "./dist/voxel-comment.umd.cjs",
  "module": "./dist/voxel-comment.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/voxel-comment.js",
      "require": "./dist/voxel-comment.umd.cjs"
    },
    "./style.css": "./dist/voxel-comment.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && vue-tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "build:fast": "vite build",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "vue",
    "vue3",
    "comment",
    "评论系统",
    "hexo",
    "butterfly"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "highlight.js": "^11.9.0",
    "marked": "^9.1.6"
  },
  "devDependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "element-plus": "^2.12.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vue": "^3.5.24",
    "vue-tsc": "^3.1.4"
  }
}
